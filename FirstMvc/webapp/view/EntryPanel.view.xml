<mvc:View controllerName="sap.ui.demo.walkthrough.controller.EntryPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<VBox class="sapUiResponsiveMargin">
		<Input value="{/recipient/name}" valueLiveUpdate="true" width="200px"/>
		<Input value="{/recipient/lastname}" valueLiveUpdate="true" width="200px"/>
		<Input value="{/recipient/PO_CODE}" valueLiveUpdate="true" width="200px"/>
		<Button  text="{i18n>showHelloButtonText}" press=".onShowHello" class="myCustomButton"/>
	
	
		<FormattedText htmlText="Hello {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
        <Button
         
         icon="sap-icon://world"
         text="{i18n>openDialogButtonText}"
         press=".onOpenDialog"
         class="sapUiSmallMarginEnd"/>
    </VBox>
</mvc:View>